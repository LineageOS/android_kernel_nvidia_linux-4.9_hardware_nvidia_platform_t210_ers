				bustype = "i2c";
				busnum = <VI_I2C_BUS>;
				addr = <0x1a>;
				datalen = <2>;
				pinmuxgrp = <0xFFFF>;
				gpios = <3>;
				regulators = "vana", "vdig", "vif";
				clocks = "cam_mclk1";
				drivername = "imx214";
				detect = <0x0002 0x0016 0xFFFF 0x0214>;
